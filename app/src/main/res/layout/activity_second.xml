<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Name_label"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:text="Enter Name: "
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="236dp"
        android:layout_height="59dp"
        android:layout_below="@id/Name_label"
        android:layout_toRightOf="@id/Name_label"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/TitleLabel"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_marginTop="27dp"
        android:text="Enter Title: "
        android:textSize="26sp" />

    <EditText
        android:id="@+id/Title"
        android:layout_width="236dp"
        android:layout_height="59dp"
        android:layout_below="@id/TitleLabel"
        android:layout_toRightOf="@id/TitleLabel"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/Phone_label"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleLabel"
        android:layout_marginTop="91dp"
        android:text="Enter Phone: "
        android:textSize="26sp" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="236dp"
        android:layout_height="59dp"
        android:layout_below="@id/TitleLabel"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="148dp"
        android:layout_toRightOf="@id/Phone_label"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:id="@+id/Email_Label"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Phone_label"
        android:layout_marginTop="91dp"
        android:text="Enter Email: "
        android:textSize="26sp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="236dp"
        android:layout_height="59dp"
        android:layout_below="@id/Phone"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="49dp"
        android:layout_toRightOf="@id/Email_Label"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Email_Label"
        android:layout_marginTop="91dp"
        android:text="Choose Department: "
        android:textSize="26sp" />

    <RadioGroup
        android:id="@+id/radio_grp1"
        android:layout_width="200dp"
        android:layout_height="138dp"
        android:layout_below="@id/Email"
        android:layout_alignRight="@id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="-208dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:checked="false"
            android:text="Sales"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="25dp"
            android:layout_weight="0.13"
            android:checked="false"
            android:text="Marketing"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.13"
            android:checked="false"
            android:text="Accounting"
            android:textSize="25dp" />


    </RadioGroup>

    <ImageButton
        android:id="@+id/ADD"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/radio_grp1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/radio_grp1"
        android:layout_alignRight="@id/ADD"
        android:layout_marginTop="12dp"
        android:layout_marginRight="-189dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@android:drawable/ic_search_category_default" />
</RelativeLayout>
